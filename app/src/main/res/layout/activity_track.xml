<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.youlorryintracity.TrackActivity">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        tools:context="com.youlorryintracity.TrackActivity" >

    </fragment>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
         android:layout_height="match_parent">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/primary"
             style="feature:all|element:labels|visibility:off"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        </android.support.v7.widget.Toolbar>

        <FrameLayout
            android:layout_width="match_parent"

            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_gravity="bottom"
                android:background="@color/white"

                android:layout_height="230dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_rec"
                            android:gravity="center|left"
                            android:paddingLeft="20dp"
                            android:text="Pick up" />

                        <TextView
                            android:id="@+id/tv_pickup"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center|left"
                            android:paddingLeft="20dp"
                            android:text="Gurgaon"
                            android:textColor="#000"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:alpha=".30"
                        android:background="#000" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_dotimg"
                            android:gravity="center|left"
                            android:paddingLeft="20dp"
                            android:text="Drop Point" />

                        <TextView
                            android:id="@+id/tv_drop"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center|left"
                            android:paddingLeft="20dp"
                            android:text="Gurgaon"
                            android:textColor="#000"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:background="#000"
                    android:alpha=".30"
                    android:layout_height="1dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center|left"
                        android:layout_height="60dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Estimate Time"
                            android:gravity="center|left"
                            android:paddingLeft="20dp"
                            android:drawableLeft="@drawable/ic_access_time_black_24dp"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/tv_time_name"
                            android:layout_width="wrap_content"
                            android:text="Gurgaon"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:gravity="center|left"
                            android:paddingLeft="20dp"
                            android:layout_height="wrap_content" />

                    </LinearLayout>
                    <View
                        android:layout_width="1dp"
                        android:background="#000"
                        android:alpha=".30"
                        android:layout_height="match_parent"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:orientation="vertical"
                        android:layout_height="60dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Entimate Distance"
                            android:gravity="center|left"
                            android:drawableLeft="@drawable/ic_directions_black_24dp"

                            android:paddingLeft="20dp"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:id="@+id/tv_distance"
                            android:text="9728824163"
                            android:textColor="#000"

                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:gravity="center|left"
                            android:paddingLeft="20dp"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:background="#000"
                    android:alpha=".30"
                    android:layout_height="1dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center|left"
                        android:layout_height="60dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Driver Name"
                            android:gravity="center|left"
                            android:paddingLeft="20dp"
                            android:drawableLeft="@drawable/ic_driver"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/tv_contact_name"
                            android:layout_width="wrap_content"
                            android:text="Gurgaon"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:gravity="center|left"
                            android:paddingLeft="20dp"
                            android:layout_height="wrap_content" />

                    </LinearLayout>
                    <View
                        android:layout_width="1dp"
                        android:background="#000"
                        android:alpha=".30"
                        android:layout_height="match_parent"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:orientation="vertical"
                        android:layout_height="60dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Driver Contact"
                            android:gravity="center|left"
                            android:drawableLeft="@drawable/ic_call_black_24dp"

                            android:paddingLeft="20dp"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:id="@+id/tv_contact_no"
                            android:text="9728824163"
                            android:textColor="#000"

                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:gravity="center|left"
                            android:paddingLeft="20dp"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </LinearLayout>
                <TextView
                    android:id="@+id/done_tv"
                    android:layout_width="match_parent"
                    android:background="@color/green"
                    android:text="DONE"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:layout_height="50dp" />
            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

</RelativeLayout>
