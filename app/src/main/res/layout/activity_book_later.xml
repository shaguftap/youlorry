<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"

    android:background="@color/md_light_blue_400"

    android:layout_height="match_parent"
    tools:context="com.youlorryintracity.BookLaterActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:theme="@style/ThemeOverlay.AppCompat.Light"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="50dp"></android.support.v7.widget.Toolbar>
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <CalendarView
                android:id="@+id/calender"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="300dp">

            </CalendarView>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"


                android:id="@+id/pickuplayout"

                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/timepick"
                    android:layout_width="match_parent"
                    android:gravity="center|left"
                    android:text="Pick Up Time"
                    android:drawableRight="@drawable/ic_access_time_black_24dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    style="@android:style/Widget.Holo.Light.Spinner"                    android:background="#ffffff"
                    android:paddingLeft="10dp"
                    android:layout_height="30dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:orientation="vertical"
                        android:layout_height="60dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:text="Pick up"
                            android:gravity="center|left"
                            android:paddingLeft="20dp"
                            android:textColor="@color/white"
                            android:drawableLeft="@drawable/ic_rec"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_width="match_parent"
                            android:text="Gurgaon"
                            android:textColor="@color/white"
                            android:id="@+id/pickup"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:gravity="center|left"
                            android:paddingLeft="20dp"
                            android:layout_height="40dp" />

                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:alpha=".30"
                        android:background="#fff" />
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:orientation="vertical"
                        android:layout_height="60dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Drop Point"
                            android:drawableLeft="@drawable/ic_dotimg"
                            android:gravity="center|left"
                            android:textColor="@color/white"
                            android:paddingLeft="20dp"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_width="match_parent"
                            android:text="Gurgaon"
                            android:id="@+id/drop"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:gravity="center|left"
                            android:paddingLeft="20dp"
                            android:layout_height="40dp" />

                    </LinearLayout>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:background="#fff"
                    android:alpha=".30"
                    android:layout_height="1dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:background="#ef851c"
                    android:id="@+id/btnbooking"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="30dp"
                    android:text="Book Now"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:layout_height="40dp" />

            </LinearLayout>




        </LinearLayout>
    </LinearLayout>
</LinearLayout>
